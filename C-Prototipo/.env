# =========================
# Roles
# =========================
# Coma-separados, sin espacios ni comentarios inline
ADMIN_WHITELIST=vittodutti@gmail.com
ACTION_WHITELIST=

# =========================
# MQTT
# =========================
MQTT_BROKER_HOST=broker.example.com
MQTT_BROKER_PORT=1883
MQTT_BROKER_USERNAME=tu_usuario
MQTT_BROKER_PASSWORD=tu_contraseña
MQTT_TOPICS=vittoriodurigutti/prueba,vittoriodurigutti/temperature,vittoriodurigutti/sensor/+

# =========================
# Base de Datos
# =========================
DB_HOST=localhost
DB_USER=tu_usuario
DB_PASS=tu_contraseña
DB_NAME=iot_webapp

# ==========================
# CONFIGURACIÓN DE BACKUP
# ==========================
# Backup automático
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# ==========================
# CONFIGURACIÓN DE NOTIFICACIONES
# ==========================
# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@tudominio.com
SMTP_PASS=your-smtp-password

# Webhooks
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ==========================
# CONFIGURACIÓN DE MONITOREO
# ==========================
# Logs
LOG_LEVEL=info
LOG_FILE=/var/log/iot-app.log

# Métricas
METRICS_ENABLED=true
METRICS_PORT=9090

# ==========================
# CONFIGURACIÓN DE PRODUCCIÓN
# ==========================
# Dominio del subdominio
DOMAIN=web.iot-opalo.work

# Configuración SSL (si usas Let's Encrypt)
SSL_EMAIL=vittodutti@gmail.com

# Configuración del reverse proxy
REVERSE_PROXY_HOST=nginx-proxy-manager
REVERSE_PROXY_PORT=80